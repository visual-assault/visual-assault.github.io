//
// Partial: variables
// ==================
//
// Global variables of all kinds
//


// Group: Unit Sizes
$base-font-size: (16/16)*100%;
$baseline-unitless: 24/(16*($base-font-size/100%));
$baseline: $baseline-unitless * 1rem;

$font-code: 'Source Code Pro', Monaco, monospace;


// Group: Colors
$highlight: <%= site.config['color'] %>;

$dark-gray: #3d464d;
$light-gray: rgba($dark-gray, .6);
$lighter-gray: rgba($dark-gray, .1);


// Group: Grid config
$toast-col-groups: 8;
$toast-gutter-width: $baseline;
$toast-pushes: true;
$toast-pulls: false;
